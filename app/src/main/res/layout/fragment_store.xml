<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".fragments.StoreFragment">

    <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/product_list"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/storeName"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Σχόλια Χρηστών"
        android:id="@+id/textView3"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/getDirections" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/storeName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/storeAddress"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/ratingScore"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/ratingScore"
        android:layout_below="@+id/ratingBar"
        android:layout_alignLeft="@+id/storeAddress"
        android:layout_alignStart="@+id/storeAddress" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ΟΔΗΓΙΕΣ ΠΡΟΣΒΑΣΗΣ"
        android:id="@+id/getDirections"
        android:layout_below="@+id/storeAddress"
        android:layout_alignLeft="@+id/storeAddress"
        android:layout_alignStart="@+id/storeAddress"
        android:layout_marginTop="29dp"
        android:backgroundTint="@color/abc_btn_colored_borderless_text_material"
        android:textColor="@color/abc_background_cache_hint_selector_material_light" />
    <!--<TextView-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:text="New Text"-->
    <!--android:id="@+id/alekos_textView" android:layout_alignTop="@+id/listView" android:layout_centerHorizontal="true"-->
    <!--android:layout_marginTop="52dp"/>-->
</RelativeLayout>
