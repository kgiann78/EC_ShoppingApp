<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              tools:context=".fragments.StoreFragment">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/store_name_label"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/store_name_text_view"/>


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/store_address_text_view"
            android:id="@+id/store_address_text_view"
            android:layout_marginTop="32dp"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:baselineAligned="false">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start">
            <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/store_rating_bar"
                    android:layout_marginTop="17dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/rating_score_label"
                    android:id="@+id/rating_score_text_view"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end">
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:id="@+id/addToShoppingListButton"
                    android:src="@mipmap/ic_cart"
                    android:contentDescription="@string/add_to_shopping_list_description"
                    android:clickable="true"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"/>
        </LinearLayout>
    </LinearLayout>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/directions_button_label"
            android:id="@+id/directionsButton"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textColor="#ffffff"
            android:backgroundTint="@color/abc_btn_colored_borderless_text_material"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/user_comments_label"
                android:id="@+id/comments_text_view"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:gravity="start"/>
        <Button android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="@string/add_review_label"
                android:id="@+id/redirectReview"
                android:layout_marginTop="20dp"
                android:textColor="#ffffff"
                android:backgroundTint="@color/abc_btn_colored_borderless_text_material"
                android:textAlignment="center"
                android:layout_weight="1"
                android:gravity="end"/>
    </LinearLayout>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/comments_list"
            android:layout_marginBottom="20dp"/>

</LinearLayout>
